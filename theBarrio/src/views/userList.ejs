<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body class="body-products">

    <%- include('partials/headerNavbar') %>

    <%- include('partials/bottoms') %>

    <!-- todos los productos -->
  
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Todos los usuarios</h2>
            </div>
            
            <% users.forEach(oneUser => { %> 
            <div class="col-12 col-sm-6 col-lg-4" class="product-container">              
                <section class="product-box">
                    <h3><%=oneUser.first_name%></h3>    
                    <h3><%=oneUser.last_name%></h3>
                    <a href="/users/profile"> 
                        <figure class="product-box_image">
                            <img src="/images/avatars/<%=oneUser.avatar%>" alt="imagen de producto">
                        </figure> 
                        
                <!-- ========== BOTON BORRAR ========== -->
                <form action="/users/delete/<%=oneUser.id_user%>" method="POST"> <!--Tengo que cambiar POST por DELETE-->
                    <button type="submit">Borrar</button>            
                </form>

                <!-- ========== BOTON EDITAR ========== -->
                <button><a href="/users/edit/<%=oneUser.id_user%>">Editar</a></button>
                
                </section>          
            </div>
            <% }) %>
        </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
</body>

</html>
