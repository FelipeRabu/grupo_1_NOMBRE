<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="body-products">
    <%- include('partials/headernavBar') %>

    <%- include('partials/bottoms') %>

    <!-- todos los productos -->
  
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Todos los productos</h2>
            </div>
            

            <%console.log("==============PRODUCTOS==================")%>
            <%console.log(products)%>
            <%console.log("=========================================")%>



            <% products.forEach(oneProduct => { %> 
            <div class="col-12 col-sm-6 col-lg-4" class="product-container">              
                <section class="product-box">

                    <a href="/products/<%=oneProduct.id_product%>"> 
                        <!--IMAGEN-->
                        <figure class="product-box_image">
                            <img src="/images/products/<%=oneProduct.image%>" alt="imagen de producto">
                        </figure>
                        <!--INFORMACION-->
                        <article class="product-box_data">
                            <h2>$<%=(1-oneProduct.discount/100)*oneProduct.price%></h2>
                            <span><%=oneProduct.discount%>%</span>
                            <p><%=oneProduct.name%></p>  
                        </article>
                    </a>
                    
                    <!-- ========== BOTON BORRAR ========== -->
                    <form action="/products/delete/<%=oneProduct.id_product%>" method="POST"> <!--Tengo que cambiar POST por DELETE-->
                        <button type="submit">Borrar</button>            
                    </form>

                    <!-- ========== BOTON EDITAR ========== -->
                    <button><a href="/products/edit/<%=oneProduct.id_product%>">Editar</a></button>

                </section>          
            </div>
            <% }) %>
        
        </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
</body>

</html>
