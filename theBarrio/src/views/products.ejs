<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="body-products">
    <%- include('partials/headernavBar') %>

    <%- include('partials/bottoms') %>

    <!-- todos los productos -->
  
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Todos los productos</h2>
            </div>
            
            <% arrayProducts.forEach(unProducto => { %> 
            <div class="col-12 col-sm-6 col-lg-4" class="product-container">              
                <section class="product-box">               
                    <a href="/products/detail/<%=unProducto.id%>"> 
                        <figure class="product-box_image">
                            <img src="/images/<%=unProducto.image%>" alt="imagen de producto">
                        </figure>
                        <article class="product-box_data">
                            <h2>$<%=(unProducto.discount/100)*unProducto.price%></h2>
                            <span><%=unProducto.discount%>%</span>
                            <p><%=unProducto.name%></p>
                            

                        </article>
                    </a>
                    <form action="/products/delete/<%=unProducto.id%>" method="POST">
                        <button type="submit">Borrar</button>            
                    </form>
                </section>          
            </div>
            <% }) %>
        
        </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
</body>

</html>
