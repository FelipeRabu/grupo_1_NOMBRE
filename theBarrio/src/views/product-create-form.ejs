
<!DOCTYPE html>
<html lang="en">

<%- include('partials/head') %>

<body>

<%- include('partials/headerNavbar') %>

<div class="container-product-create">
<form action="/products/create" method="POST">
    <div class="form-group">
      <label for="exampleInputEmail1">Nombre</label>
      <input name="name" type="text" class="form-control" placeholder="Escribi el nombre">
    </div>

    <div class="form-group">
        <label for="exampleFormControlFile1">Imagen</label>
        <input name="image" type="file" class="form-control-file" id="exampleFormControlFile1">
    </div>

    <div class="form-group"> 
    <label for="exampleFormControlFile1">Categoria</label>  
    <select name="category" class="custom-select">
        <option selected>Selecciona la categoria</option>
        <option value="remera">Remera</option>
        <option value="buzo">Buzo</option>
        <option value="camisa">Camisa</option>
    </select>
    </div> 

         
    <div class="form-group">
        <div><label for="exampleFormControlFile1">Color</label></div>       
            <%["Rojo","Verde","Azul","Celeste","Blanco","Negro"].forEach(oneColor => {%>     
            <div class="form-check form-check-inline">
                <input name="color" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="<%=oneColor%>">
                <label class="form-check-label" for="inlineCheckbox1"><%=oneColor%></label>
            </div>   
        <%});%>
    </div>

    <div class="form-group">
        <div><label for="exampleFormControlFile1">Talle</label></div>
            <%["XS","S","M","L","XL"].forEach(oneSize => {%>     
            <div class="form-check form-check-inline">
                <input name="size" class="form-check-input" type="checkbox" id="inlineCheckbox1" value="rojo">
                <label class="form-check-label" for="inlineCheckbox1"><%=oneSize%></label>
            </div>   
        <%});%>
        </div>
    
    

        <div class="form-group">
            <label for="exampleInputEmail1">Diseño</label>
            <input name="design" type="text" class="form-control" placeholder="Escribi el nombre del diseño">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Artista</label>
            <input name="artist" type="text" class="form-control" placeholder="Escribi el nombre del artista">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Precio</label>
            <input name="price" type="number" class="form-control" placeholder="Escribi el nombre del artista">
        </div>

        <div class="form-group">
            <label for="exampleInputEmail1">Descuento</label>
            <input name="discount" type="number" class="form-control" placeholder="Escribi el nombre del artista">
        </div> 

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  </div>

<%- include('partials/footer') %>
 
<script src="/js/product-create-script.js"></script>

</body>
</html>