<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="body-products">
    <%- include('partials/headernavBar') %>

    <%- include('partials/bottoms') %>

    <!-- todos los productos -->
  
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title">Todos los productos</h2>
            </div>
            
            <% products.forEach(oneProduct => { %> 
            <div class="col-12 col-sm-6 col-lg-4" class="product-container">              
                <section class="product-box">
                    
                    <h3>El talle es: <%=oneProduct.size.name%></h3>    
                    <h3>El color es: <%=oneProduct.color.name%></h3>  
                    <h3>La categoria es: <%=oneProduct.category.name%></h3>   
                    <h3>El artista es: <%=oneProduct.artist.first_name%></h3> 
                    <h3>El dise√±o es: <%=oneProduct.design.name%></h3>  
                    <h3>El precio con descuento es: <%=oneProduct.getDiscountPrice%></h3>          
        
                    <a href="/products/detail/<%=oneProduct.id_product%>"> 
                        <figure class="product-box_image">
                            <img src="/images/<%=oneProduct.image%>" alt="imagen de producto">
                        </figure>
                        <article class="product-box_data">
                            <h2>$<%=(1-oneProduct.discount/100)*oneProduct.price%></h2>
                            <span><%=oneProduct.discount%>%</span>
                            <p><%=oneProduct.name%></p>
                            

                        </article>
                    </a>
                    
                    <form action="/products/delete/<%=oneProduct.id%>" method="POST"> <!--Tengo que cambiar POST por DELETE-->
                        <button type="submit">Borrar</button>            
                    </form>

                    <button><a href="/products/edit/<%=oneProduct.id%>">Editar</a></button>

                </section>          
            </div>
            <% }) %>
        
        </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
</body>

</html>
